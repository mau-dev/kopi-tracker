<h1>Kopis List</h1>
<% if user_signed_in? %>
<%= link_to 'New Kopi', new_kopi_path %>
<% end %>

<table>
	<tr>
		<th>Name</th>
		<th>Roast</th>
		<th>Origin</th>
		<th></th>

	</tr>

	<% @kopi.each do |x| %>
		<tr>
			<td><%= x.name %></td>
			<td><%= x.roast_id %></td>
			<td><%= x.origin_id%></td>
			<td><%= link_to 'Show', kopi_path(x) %></td>
			<td><%= link_to 'Edit', edit_kopi_path(x) %></td>
			<td><%= link_to 'Destroy', kopi_path(x),
				method: :delete,
				data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>


<%= link_to 'New kopi', new_kopi_path %>
<%= link_to 'log in', new_user_session_url %>
<%= link_to 'log out', destroy_user_session_url, method: :delete %>