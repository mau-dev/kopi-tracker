<h1><%= @customer.name %></h1>

			<thead>
				<tr>
					<th>Name</th>
					<th>Roast</th>
					<th>Origin</th>
					<th>Show</th>
				</tr>
			</thead>
			<tbody>
				<% @customer.kopis.each do |kopi| %>
					<tr>
						<td><%= kopi.name %></td>
						<td><%= kopi.roast.name %></td>
						<td><%= kopi.origin.location %></td>
						<td><%= link_to 'Show', kopi_path(kopi) %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
  </div>

<%= link_to('Edit', edit_customer_path, {:class => "btn btn-warning btn-lg"}) %>
<%= link_to('Destroy', customer_path(@customer), method: :delete, :class => "btn btn-danger btn-lg", data: {confirm: 'Are you sure?'})%>